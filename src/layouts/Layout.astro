<style is:global>
	main{
		padding: 3.8rem;
		gap: 2rem;
		min-height: 100vh;	
		display: grid;
		grid-template-areas: 
		'toolset hero hero social experience'
		'projects projects projects projects contact'
		'projects projects projects projects contact'
		;
		grid-template-columns: 20rem 18rem 18rem 18rem auto;
		grid-template-rows: 20rem 10rem 20rem;
	}

	#hero{
		grid-area: hero;
	}

	#projects-container{
		grid-area: projects;
	}

	#toolset{
		grid-area: toolset;
	}

	#contact{
		grid-area: contact;
	}

	#socials{
		grid-area: social;
	}

	#experience{
		grid-area: experience;
	}
</style>





