---
import SectionIndex from "./SectionIndex.astro";

const EXPERIENCES = [
  {
    date: 'January 2024 - July 2024',
    subtitle: 'Sendme & Admin Sendme – Final Engineering Project at Universidad Santa María',
    info: 'Developed two web applications to modernize e-commerce operations for Milenium Manía C.A., focusing on international shipments and administrative control. Built with scalable architecture and real-time API integration.',
    learn: '/project/sendme'
  },
  {
    date: 'March 2025 - currently',
    subtitle: 'Syncro – Inventory & Installment Management for Milenium Manía C.A',
    info: 'Created a specialized system to track Cashea-based payments, manage inventory, and generate financial reports. Designed with interactive charts and multi-layer architecture for business transparency.',
    learn: '/project/syncro'
  }
]



---
<div id="experience">
    <SectionIndex style="py-0 pt-10">
        <div class="pointer-events-none z-20 absolute bottom-0 left-0 w-full h-30 bg-gradient-to-t from-theme-coal-black to-transparent"></div>
        <ol class="relative h-full overflow-y-auto border-s border-gray-200 dark:border-gray-700">                  
            {
                EXPERIENCES.map(({date, info, subtitle, learn})=>(
                    <li class="mb-10 ms-4 px-5 relative">
                        <div class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-theme-dark-blue dark:bg-theme-primary-blue"></div>
                        
                        <time class="mb-1 text-xs font-normal leading-none text-gray-400 dark:text-[#9aa1b5]">{date}</time>
                    
                        <h3 class="text-md font-semibold text-gray-900 dark:text-white">{subtitle}</h3>
                    
                        <p class="mb-4 text-sm font-normal text-gray-500 dark:text-gray-400">{info}</p>
                        
                        <a href={learn} class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">Learn more 
                            <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" fill="none" viewBox="0 0 14 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                            </svg>
                        </a>
                    </li>
                ))
            }
        </ol>


    </SectionIndex>
</div>