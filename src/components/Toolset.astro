---
import { TECHNOLOGIES } from '@constants/technologies';
import SectionIndex from './SectionIndex.astro';
---

    
    
    <div id="toolset">
        {
            
                <SectionIndex style="gap-5 flex flex-col py-10">
                    {
                        TECHNOLOGIES.map(tech=>(
                            <div class="flex flex-col relative overflow-hidden gap-3">
                                
                                <h3 class="text-xs text-start  text-theme-gray-medium dark:text-theme-light font-bold">{tech.category}</h3>
                   
                                <div class="relative w-full h-14 overflow-hidden ">
                                    {/* <div class="absolute z-20 backdrop-blur-xs  w-3 overflow-hidden h-full rounded-l-full  "></div>
                                    <div class="absolute z-20 backdrop-blur-xs  right-0 w-3 overflow-hidden h-full  rounded-r-full"></div> */}
                                    <ul class="techs z-10 absolute h-full flex gap-5 -left-100">
                                        {tech.techs.map((tech)=>(
                                            <li class="flex items-center justify-center">
                                                <div class="flex h-full  object-contain aspect-square items-center justify-center">
                                                    <tech.icon/>
                                                </div>
                                            </li>
                                        ))}
                                        {tech.techs.map((tech)=>(
                                            <li class="flex items-center justify-center">
                                                <div class="flex h-full aspect-square object-contain  items-center justify-center">
                                                    <tech.icon/>
                                                </div>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        ))
                    }
                </SectionIndex> 
                
            
        }
    </div>

<style>
    @keyframes techs{
        0% {transform: translateX(0);}
        50% {transform: translateX(50%)}
        100% {transform: translateX(0);}
    }

    .techs{
        animation: techs 30s ease-in-out infinite;
    }

</style>

